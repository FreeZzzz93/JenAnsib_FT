pipeline {
  agent {label 'master'}

  stages {
    stage('Copy filebeat.yml from GIT') {
      steps {
        dir ('host/ansible/files') {
	      	sh 'cp filebeat.yml /var/lib/jenkins/tmp/filebeat.yml'         
        }
      }
    }
    stage('Run Ansible playbook') {
      steps {
        sh 'ansible-playbook -i host/ansible/inventory/hosts host/ansible/playbooks/config_filebeat.yml'         
        
      }
    }
  }
}

