pipeline {
  agent {label 'master'}

  stages {
    stage('Copy filebeat.yml from GIT') {
      steps {
        dir ('host/ansible/files') {
	      	sh 'cp node_exporter.service /var/lib/jenkins/tmp/node_exporter.service'         
        }
      }
    }
    stage('Run Ansible playbook') {
      steps {
        sh 'ansible-playbook -i host/ansible/inventory/hosts host/ansible/playbooks/config_node_exporter_service.yml'         
        
      }
    }
  }
}