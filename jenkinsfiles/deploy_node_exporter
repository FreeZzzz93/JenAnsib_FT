pipeline {
  agent {label 'master'}

  stages {
    stage('Copy node_exporter.service from GIT') {
      steps {
        dir ('ansible/files') {
	      	sh 'cp node_exporter.service /var/lib/jenkins/tmp/node_exporter.service'         
        }
      }
    }
    stage('Run Ansible playbook') {
      steps {
        sh 'ansible-playbook -l $HNAME -i ansible/inventory/hosts ansible/playbooks/config_node_exporter_service.yml'        
      }
    }
    stage('Clear tmp directory') {
      steps {
        sh 'rm /var/lib/jenkins/tmp/*.*'                
      }
    }
  }
}