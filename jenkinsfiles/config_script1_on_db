pipeline {
  agent {label 'master'}

  stages {
    stage('Copy script1.sh from GIT') {
      steps {
        sh 'cp db/script1.sh /var/lib/jenkins/tmp/script1.sh'         
        }
    }
    stage('Run Ansible playbook') {
      steps {
        sh 'ansible-playbook -i host/ansible/inventory/hosts host/ansible/playbooks/config_script1_on_db.yml'        
      }
    }
    stage('Clear tmp directory') {
      steps {
        sh 'rm /var/lib/jenkins/tmp/script1.sh'        
      }
    }
  }
}